root = true

[*] # Unix-style newlines with a newline ending every file

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false
charset = utf-8

indent_style = space
indent_size = 4

max_line_length = 120

[{Makefile,**.mk}]

indent_style = tab # Use tabs for indentation (Makefiles require tabs)
